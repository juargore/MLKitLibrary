<resources >
    <!-- Base application theme. -->
    <style name="Theme.DrowsinessDetector" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="alertDialogTheme">@style/DialogTheme</item>
    </style>
    <style name="Theme.DrowsinessDetector.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="DialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="textColorAlertDialogListItem">@color/black</item>
        <item name="android:windowMinWidthMajor">60%</item>
        <item name="android:windowMinWidthMinor">60%</item>
    </style>
</resources>
